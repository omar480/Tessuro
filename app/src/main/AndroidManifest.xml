<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csulb.tessuro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- intro activities -->
        <activity
            android:name=".views.intro.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.intro.WelcomeActivity"/>

        <!-- auth activities -->
        <activity android:name=".views.auth.LoginActivity" />
        <activity android:name=".views.auth.RegisterActivity" />

        <!-- dashboard activities -->
        <activity
            android:name=".views.dashboard.DashboardActivity"
            android:theme="@style/AppTheme.noActionBar" />

    </application>

</manifest>