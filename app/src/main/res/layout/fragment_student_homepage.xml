<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tester">

    <TextView
        android:id="@+id/student_homepage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="699dp"
        android:text="Take A Quiz!"
        android:textAlignment="center"
        android:textColor="@color/colorTessuroPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/homeEmail_textField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="311dp"
        android:layout_height="68dp"
        android:layout_marginTop="30dp"
        android:hint="@string/email"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/colorTessuroPrimary"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/colorTessuroPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_homepage_title"
        app:startIconDrawable="@drawable/ic_email"
        android:tooltipText="Enter your Email?">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/key_textField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="311dp"
        android:layout_height="68dp"
        android:hint="@string/key"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/colorTessuroPrimary"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/colorTessuroPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeEmail_textField"
        app:startIconDrawable="@drawable/ic_key">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:minHeight="60dp"
        android:text="@string/submit"
        android:textSize="16sp"
        app:backgroundTint="@color/colorTessuroPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_textField"
        app:layout_constraintVertical_bias="0.0"
        app:icon="@drawable/ic_done"
        app:iconGravity="textStart"/>

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="ShowPopup"/>




</androidx.constraintlayout.widget.ConstraintLayout>
