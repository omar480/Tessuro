<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".views.dashboard.home.quiz.TFQuizMakerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/createQuizHammer_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/hammer_wrench" />

        <TextView
            android:id="@+id/buildQuizSlogan_textView"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:text="@string/build_your_quiz"
            android:textAlignment="center"
            android:textColor="@color/colorTessuroPrimary"
            android:textSize="25sp" />

    </LinearLayout>
</ScrollView>

