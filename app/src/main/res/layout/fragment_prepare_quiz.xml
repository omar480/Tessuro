<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorTessuroBackground"
    tools:context=".views.dashboard.quiz.PrepareQuizFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/quiz_checklist" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/prepareQuizSlogan_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_information"
                    android:textAlignment="center"
                    android:textColor="@color/colorTessuroPrimary"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/prepareQuizTakeQuiz_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:minHeight="60dp"
                    android:text="@string/take_quiz"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_happy"
                    app:iconGravity="textStart" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prepareQuizQuizName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="quiz name"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textAlignment="center"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/prepareQuizQuizType_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="quiz type"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/prepareQuizQuizNumQuestions_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="num questions"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/prepareQuizCreatedBy_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="created by"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/prepareQuizCreatedAt_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="created at"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/prepareQuizAllowedTime_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time"
                android:paddingVertical="5dp"
                android:textColor="@color/colorTessuroPrimary"
                android:textSize="16sp"/>



        </LinearLayout>
    </LinearLayout>
</ScrollView>
