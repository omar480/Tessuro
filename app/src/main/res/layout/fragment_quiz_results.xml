<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTessuroBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.dashboard.quiz.QuizResultsFragment">

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/quizResultsQuizId_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quiz id"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quizResultsUserEmail_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quizResultsNumCorrect_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="num correct"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quizResultsGoHome_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:backgroundTint="@color/colorTessuroPrimary"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:minHeight="60dp"
            android:text="@string/home_page"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>