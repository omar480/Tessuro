<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/current_password_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:hint="current_password"
        android:autofillHints="urrent_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/current_password_error_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/new_password_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:autofillHints="new_password"
        android:gravity="center"
        android:hint="new_password"
        android:inputType="textPassword"
        android:singleLine="true" />

    <TextView
        android:id="@+id/new_password_error_text"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/confirm_new_password_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="confirm_password"
        android:autofillHints="confirm_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/confirm_new_password_error_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
         />

    <Button
        android:id="@+id/change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="change" />

</LinearLayout>